<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/vaccine_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/vaccine_name" />

    <TextView
        android:id="@+id/vaccine_description"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/vaccine_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/vaccine_description" />

    <TextView
        android:id="@+id/vaccination_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/vaccine_description"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/vaccination_date" />

    <TextView
        android:id="@+id/next_vaccination_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/vaccination_date"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/next_vaccination_date" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/exam_type"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="@string/exam_type" />

    <TextView
        android:id="@+id/exam_description"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/exam_type"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="@string/exam_description" />


    <TextView
        android:id="@+id/examination_date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/examination_date"
        app:layout_constraintStart_toEndOf="@+id/exam_description"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/next_examination_date"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/examination_date"
        app:layout_constraintStart_toEndOf="@+id/examination_date"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


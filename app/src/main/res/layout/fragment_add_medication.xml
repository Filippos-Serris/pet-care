<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.medication.AddMedicationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/mandatory_fields"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/medication_name_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/medication_name_star"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/medication_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapWords"
                android:maxLength="15"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/medication_description_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/medication_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medication_name_label">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/medication_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="50"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/medication_dosage_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/medication_dosage_star"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medication_description_label"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".6">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/medication_dosage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/dosage_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:minHeight="48dp"
            app:layout_constraintStart_toEndOf="@id/medication_dosage_label"
            app:layout_constraintTop_toTopOf="@id/medication_dosage_label" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/medication_start_date_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/medication_start_date_star"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medication_dosage_label"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".6">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/medication_start_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/clear_start_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/clear_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/medication_start_date_label"
            app:layout_constraintTop_toTopOf="@id/medication_start_date_label" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/medication_end_date_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/medication_end_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medication_start_date_label"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".6">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/medication_end_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/clear_end_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/clear_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/medication_end_date_label"
            app:layout_constraintTop_toTopOf="@id/medication_end_date_label" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/medication_repetition_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/medication_repetition"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medication_end_date_label"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".6">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/medication_repetition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/repetition_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:minHeight="48dp"
            app:layout_constraintStart_toEndOf="@id/medication_repetition_label"
            app:layout_constraintTop_toTopOf="@id/medication_repetition_label" />

        <Button
            android:id="@+id/save_info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/save_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/medication_repetition_label" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/red_400"
            android:text="@string/delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/save_info_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
        <!-- PetDateOfBirth-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pet_date_of_birth_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginEnd="339dp"
            android:hint="@string/pet_date_of_birth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pet_sex_label">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pet_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="false"
                android:inputType="textCapWords"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- PetColor -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pet_colour_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/pet_colour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pet_date_of_birth_label">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pet_colour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapWords"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- PetChip -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pet_chip_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/pet_chip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pet_colour_label">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pet_chip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapWords"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/pet_image_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/pet_image"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pet_chip_label" />

        <RadioGroup
            android:id="@+id/pet_image_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pet_image_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/dog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/dog"/>
            <RadioButton
                android:id="@+id/cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/cat"/>
            <RadioButton
                android:id="@+id/bird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/bird"/>
            <RadioButton
                android:id="@+id/fish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/fish"/>
            <RadioButton
                android:id="@+id/livestock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/livestock"/>

            <RadioButton
                android:id="@+id/custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@android:drawable/ic_menu_add" />
        </RadioGroup>

        <Button
            android:id="@+id/save_info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/save_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pet_image_selector" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>